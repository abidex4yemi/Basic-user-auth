{
  "name": "basic-user-auth",
  "version": "1.0.0",
  "description": "basic-user-auth-app",
  "main": "start.js",
  "scripts": {
    "db:create": "npx sequelize db:create",
    "db:migrate": "npx sequelize db:migrate",
    "db:seed": "npx sequelize db:seed:all",
    "db-create:test": "cross-env NODE_ENV=test npx sequelize db:create",
    "db-migrate:test": "cross-env NODE_ENV=test npx sequelize db:migrate",
    "db-drop": "sequelize db:drop",
    "db-drop:test": "NODE_ENV=test sequelize db:drop",
    "db-migrate:undo": "npx sequelize db:migrate:undo:all",
    "db-migrate:undo:test": "NODE_ENV=test npx db:migrate:undo:all",
    "start": "npm run prod",
    "server": "node ./src/api/start.js",
    "server:prod": "node ./src/api/start.js",
    "dev": "cross-env NODE_ENV=development npm-run-all server",
    "prod": "NODE_ENV=production npm-run-all server:prod",
    "watch": "nodemon",
    "test": "npm run NODE_ENV=test DB_ENV=test jest --watchAll --verbose",
    "lint-fix": "eslint ./src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abidex4yemi/Basic-user-auth.git"
  },
  "author": "Sulaiman Abidemi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abidex4yemi/Basic-user-auth/issues"
  },
  "homepage": "https://github.com/abidex4yemi/Basic-user-auth#readme",
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "nodemailer-sendgrid": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "pg": "^7.13.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.2",
    "uuid": "^3.3.3",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1",
    "sequelize-cli": "^5.5.1",
    "jest": "^24.8.0",
    "cross-env": "^5.2.0"
  }
}
